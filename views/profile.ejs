            <option value="VT" <%= locals.state == "VT" ? 'selected' : '' %>>Vermont</option>
            <option value="VA" <%= locals.state == "VA" ? 'selected' : '' %>>Virginia</option>
            <option value="WA" <%= locals.state == "WA" ? 'selected' : '' %>>Washington</option>
            <option value="WV" <%= locals.state == "WV" ? 'selected' : '' %>>West Virginia</option>
            <option value="WI" <%= locals.state == "WI" ? 'selected' : '' %>>Wisconsin</option>
            <option value="WY" <%= locals.state == "WY" ? 'selected' : '' %>>Wyoming</option>
        </select>
        
        
        <label for="zipcode">Zipcode:<span class="required">*</span></label>
        <input type="text" id="zipcode" name="zipcode" placeholder="12345" pattern="\d{5}(-\d{4})?" title="A 5 or 9 digit zipcode (5 digits or 5 digits-4 digits)" class="field" value = "<%= locals.zipcode %>">
        
        <input type="submit" value="Submit">
    </form>

    </div>

    <style>
        .required {
            color: red;
        }
        label {
            display: block;
            margin-top: 10px;
        }
        input, select {
            margin-bottom: 20px;
        }
    </style>
</body>
</html>
